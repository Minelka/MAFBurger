@using MAFBurger.WebApp.Data.Concrete
@using MAFBurger.WebApp.Models.Concrete
@model OrderViewModel


@{
	SelectList sauceSelectList = new SelectList((List<MenuViewModel>)ViewBag.Menus, "Id", "Name", "Price");
}

<form asp-action="Add" method="post">
	<div class="form-group">
		<label asp-for="OrderMenus"></label>
		<input asp-for="OrderMenus" class="form-control" />
		<span asp-validation-for="OrderMenus" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Size"></label>
		<input asp-for="Size" class="form-control" />
		<span asp-validation-for="Size" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="OrderExtras"></label>
		<input asp-for="OrderExtras" class="form-control" />
		<span asp-validation-for="OrderExtras" class="text-danger"></span>
	</div><hr />
	<div class="form-group">
		<label asp-for="Quantity"></label>
		<input asp-for="Quantity" class="form-control" />
		<span asp-validation-for="Quantity" class="text-danger"></span>
	</div><hr />
	<div class="form-group">
		<label asp-for="Quantity"></label>
		<input asp-for="Quantity" class="form-control" />
		<span asp-validation-for="Quantity" class="text-danger"></span>
	</div><hr />
	<br />
	<div class="form-group">
		<label asp-for="Quantity"></label>
		<input asp-for="Quantity" class="form-control" />
		<span asp-validation-for="Quantity" class="text-danger"></span>
	</div><hr />
	<div class="form-check">
		<input asp-for="IsActive" class="form-check-input" value="true">
		<label class="form-check-label" asp-for="IsActive"></label>
		<span asp-validation-for="IsActive" class="text-danger"></span>
	</div><hr />
	<button type="submit" class="btn btn-info">Ekle</button>
	<a asp-action="Index" class="btn btn-warning">Geri</a>
</form>
