﻿<!-- Modal -->
<div class="modal fade" id="deleteItemConfirmModal" tabindex="-1" aria-labelledby="deleteItemConfirmLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="deleteItemConfirmLabel">Silme Uyarısı</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="cancelButton">İptal</button>
                <button type="button" class="btn btn-danger" id="yesButton">Evet</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $('a[data-delete-modal-id]').on('click', function () {
        var href = $(this).data("href");
        var modalId = $(this).data("delete-modal-id");
        var modalMessage = $(this).data("delete-confirm-message");

        modalMessage = `<p>${modalMessage}</p>`;

        $(modalId).find(".modal-body").html(modalMessage);

        $(modalId).find("#yesButton").on('click', function () {
            window.location = "" + href;
        });

        $(modalId).modal("show");
    });
</script>